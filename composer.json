{
    "name": "sawirricardo/whatsapp-php",
    "description": "Use Whatsapp's Cloud API",
    "keywords": [
        "sawirricardo",
        "whatsapp-php"
    ],
    "homepage": "https://github.com/sawirricardo/whatsapp-php",
    "license": "MIT",
    "authors": [
        {
            "name": "sawirricardo",
            "email": "sawir.ricardo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 | ^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/support": "^7.0 | ^8.0 | ^9.0 | ^10.0 | ^11.0 | ^12.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20 | 2.0",
        "spatie/ray": "^1.28 | 2.0"
    },
    "autoload": {
        "psr-4": {
            "Sawirricardo\\Whatsapp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sawirricardo\\Whatsapp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
